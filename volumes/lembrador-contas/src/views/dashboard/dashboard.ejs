<%- template.head %>

    <body>
        <%- template.navbar %>
            <div class="container">
                <div class="starter-template">
                    <h1 class="title-1">
                        <%= title %>
                    </h1>
                    <br>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Vencimento</th>
                                <th>Valor</th>
                                <th>Situação</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% activeBillList.forEach(function(bill){ %>
                                <tr>
                                    <td>
                                        <%= bill.name %>
                                    </td>
                                    <td>
                                        <span class="date" data-mask="00/00/0000"><%= bill.dueDate.toLocaleString(); %></span>
                                    </td>
                                    <td>
                                        <span class="money"><%= Number(bill.value).toFixed(2) %></span>
                                    </td>
                                    <td>
                                        <span"><%= activeBillStatusEnum[bill.status] %></span>
                                    </td>
                                </tr>
                                <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
            <%- template.scripts %>
                <script>
                    $( document ).ready(function() {
                        applyMask();
                    });

                    function applyMask() {
                        $('.money').mask('000.000.000.000.000,00', {reverse: true});
                    }
                </script>
    </body>

    </html>