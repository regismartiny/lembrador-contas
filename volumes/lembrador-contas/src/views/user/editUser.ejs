<%- include ('../partials/header.ejs') %>

    <body>
        <%- template.navbar %>
            <div class="container">
                <div class="starter-template">
                    <h1 class="title-1">
                        <%= title %>
                    </h1>
                    <br>
                    <form action="/users/update" method="post">
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <div class="form-group">
                            <label for="name">Nome</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nome"
                                aria-describedby="basic-addon1" value="<%= user.name %>">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                aria-describedby="basic-addon1" value="<%= user.email %>">
                        </div>
                        <div class="form-group">
                            <label for="status">Situação</label>
                            <select name='status' class="form-control" id="status">
                                <% var keys = Object.keys(statusEnum); keys.forEach(function(vst){ %>
                                    <option <% if (vst == user.status) {%>selected="selected"<% } %> value="<%= vst %>"><%= statusEnum[vst] %></option>
                                <%})%>
                            </select>
                        </div>
                        <br>
                        <div class="form-group-btn">
                            <input type="submit" class="btn btn-primary center-block" value="Salvar" />
                            <a href="/users/list" class="btn btn-secondary center-block">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
            <%- template.scripts %>
    </body>

    </html>