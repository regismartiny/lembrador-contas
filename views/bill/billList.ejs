<%- template.head %>

    <body>
        <%- template.navbar %>
            <div class="container">
                <div class="starter-template">
                    <h1 class="text-center title-1">
                        <%= title %>
                    </h1>
                    <br>
                    <div class="justify-content-center">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Empresa</th>
                                    <th>Fonte Valor</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% billList.forEach(function(bill){ %>
                                    <tr>
                                        <td>
                                            <%= bill.company %>
                                        </td>
                                        <td>
                                            <%= bill.valueSourceType %>
                                        </td>
                                        <td><a href='/bills/edit/<%= bill._id %>'>Editar</a>
                                            <a href='/bills/remove/<%= bill._id %>'>Excluir</a></td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <%- template.scripts %>
    </body>

    </html>