<%- template.head %>

    <body>
        <%- template.navbar %>
            <div class="container">
                <div class="starter-template">
                    <h1 class="text-center title-1">
                        <%= title %>
                    </h1>
                    <br>
                    <form action="/users/update" method="post">
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <div class="form-group">
                            <label for="username">Nome</label>
                            <input type="text" class="form-control col-10 offset-1 col-sm-8 offset-sm-2" id="username" name="username" placeholder="Nome"
                                aria-describedby="basic-addon1" value="<%= user.username %>">
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control col-10 offset-1 col-sm-8 offset-sm-2" id="email" name="email" placeholder="Email"
                                aria-describedby="basic-addon1" value="<%= user.email %>">
                        </div>
                        <br>
                        <div class="form-group-btn">
                            <input type="submit" class="btn btn-primary center-block" value="Salvar" />
                        </div>
                    </form>
                </div>
            </div>
            <%- template.scripts %>
    </body>

    </html>